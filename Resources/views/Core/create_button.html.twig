{% if admin.hasRoute('create') and admin.isGranted('CREATE')%}
        {% set create_text =  'link_action_create'|trans({}, admin.translationDomain) %}
        {% if create_text == 'link_action_create' %}
            {% set create_text =  'link_action_create'|trans({}, 'SonataAdminBundle') %}
        {% endif %}
        {% if admin.subClasses is empty %}
                <a class="btn btn-primary btn-small" href="{{ admin.generateUrl('create', {locale: get_current_admin_locale(admin) }) }}">
                    <i class="icon-white icon-plus"></i> {{ create_text }}</a>
            {% else %}
                <span class="btn-group  btn-small sonata-action-element">
                    <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                        {{ create_text }}
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        {% for subclass in admin.subclasses|keys %}
                            <li>
                                <a href="{{ admin.generateUrl('create', {'subclass': subclass}) }}">{{ subclass }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </span>
            {% endif %}
    <div class="clearfix">&nbsp;</div>
{% endif %}
