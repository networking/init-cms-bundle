{% block admin_navbar %}
    {% if app.user is defined %}
        {% if is_granted('ROLE_SONATA_ADMIN') %}
            <div class="navbar-initcms">
                <div class="navbar navbar-fixed-top navbar-initcms navbar-inverse">
                    <div class="navbar-inner">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-2">
                                    <a href="{{ url('sonata_admin_dashboard') }}" class="pull-left">
                                        <img src="{{ asset('bundles/networkinginitcms/img/logo_initcms.png') }}"
                                             width="77">
                                    </a>
                                </div>
                                <div class="col-md-5">
                                    {% if admin_pool is defined %}
                                        <a href="{{ url('sonata_admin_dashboard') }}" class="navbar-brand">
                                            {{ admin_pool.title }}
                                        </a>
                                        {% include admin_pool.getTemplate('user_block') %}
                                    {% endif %}
                                </div>
                                <div class="col-md-5 pull-right">
                                    {% if admin_pool is defined %}
                                        {{ mopa_bootstrap_menu('AdminMenu') }}
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    {% endif %}
{% endblock %}