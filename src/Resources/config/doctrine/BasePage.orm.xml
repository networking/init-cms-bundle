<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <mapped-superclass name="Networking\InitCmsBundle\Entity\BasePage" table="base_page">
        <field name="createdAt" type="datetime" column="created_at"/>
        <field name="updatedAt" type="datetime" column="updated_at"/>
        <field name="pageName" type="string" column="page_name" length="255"/>
        <field name="metaTitle" type="string" column="meta_title" length="255" nullable="true"/>
        <field name="url" type="string" column="url" length="255" nullable="true"/>
        <field name="path" type="string" column="path" length="255" nullable="true"/>
        <field name="level" type="integer" column="lvl" nullable="true"/>
        <field name="metaKeyword" type="string" column="meta_keyword" length="255" nullable="true"/>
        <field name="metaDescription" type="text" column="meta_description" nullable="true"/>
        <field name="isHome" type="boolean" column="is_home" nullable="true"/>
        <field name="status" type="string" column="status" length="50"/>
        <field name="visibility" type="string" column="visibility" length="50"/>
        <field name="activeFrom" type="datetime" column="active_from" nullable="true"/>
        <field name="activeTo" type="datetime" column="active_to" nullable="true"/>
        <field name="locale" type="string" column="locale" length="6"/>
        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="prePersist"/>
            <lifecycle-callback type="preUpdate" method="preUpdate"/>
        </lifecycle-callbacks>
    </mapped-superclass>
</doctrine-mapping>