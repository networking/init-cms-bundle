<div id="contentTypeModal" class="modal" aria-hidden="true" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-body form-inline">
                <p>{{ 'info.create.layout_block'|trans({}, 'PageAdmin') }}</p>
                <select id="selectContentType" class="form-control" style="width: 220px;">
                    {% for option in get_content_type_options() %}
                        <option value="{{ option.class }}">{{ option.name|trans }}</option>
                    {% endfor %}
                </select> <span id="contentLoading" style="display: none; margin: 5px"><img
                            src="{{ asset('bundles/networkinginitcms/img/loading.gif') }}"/></span>
            </div>
            <div class="modal-footer">
                <button data-dismiss="modal" aria-hidden="true"
                        class="btn btn-default">{{ 'btn_cancel'|trans({}, 'NetworkingInitCmsBundle') }}</button>
                <button type="button"
                        onclick="jQuery('#contentTypeModal').data('create', true).trigger('initcms.create_block')"
                        id="createContentButton"
                        data-loading-text="{{ 'btn_loading'|trans({}, 'NetworkingInitCmsBundle') }}"
                        class="btn btn-primary">{{ 'btn_create'|trans({}, 'NetworkingInitCmsBundle') }}</button>
            </div>
        </div>
    </div>
</div>

