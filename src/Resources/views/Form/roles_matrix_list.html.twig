{% for role, attributes in roles|sort %}
{% if attributes.form is defined %}
    <li>{{ form_widget(attributes.form, {label: attributes.role_translated, value: attributes.role, attr: {disabled: attributes.is_granted?false:true}}) }}</li>
{% endif %}
{% endfor %}
