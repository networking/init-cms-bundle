<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"  xmlns:xhtml="http://www.w3.org/1999/xhtml">
    {% for page in pages %}
        <url>
            <loc>{{ domain }}{{ page.route.path }}</loc>
            <lastmod>{{ page.updatedAt|date("c") }}</lastmod>
            {% for translations in page.translations %}
                <xhtml:link rel="alternate" hreflang="{{ translations.locale | slice(0, 2) }}" href="{{ domain }}{{ translations.route.path }}" />
            {% endfor %}
     </url>
    {% endfor %}
    {% for link in additional_links %}
    <url>
        <loc>{{ domain }}{{ link }}</loc>
    </url>
    {% endfor %}
</urlset>
