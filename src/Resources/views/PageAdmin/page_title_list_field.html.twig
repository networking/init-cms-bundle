{% extends '@NetworkingInitCms/CRUD/base_list_field.html.twig' %}

{% block field %}
    {% apply spaceless %}

        <a href="{{ admin.generateUrl('edit', {'id' : object.id}) }}" class="link-page-edit show-tooltip"
           data-page_id="{{ admin.id(object) }}" data-original-title="{{ value }}">
            {% if object.level > 1 %}
                {% for i in 1..(object.level-1) %}

                    <i class="la la-angle-right level-spacer {{ loop.first?'first':'' }} {{ loop.last?'last':'' }}"></i>
                {% endfor %}
            {% endif %}
            {{ value }}</a>
    {% endapply %}
{% endblock %}