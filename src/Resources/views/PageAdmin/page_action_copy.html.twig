{% if admin.isGranted('EDIT', object) and admin.hasRoute('edit') %}
  <a href="{{ admin.generateObjectUrl('copy', object) }}"
     class="{% if isSubNav is defined  %}nav-link{% else %}btn btn-sm btn-clean btn-icon{% endif %} show-tooltip  dialog-link"
     data-original-title="{{ 'action._copy'|trans({}, 'PageAdmin') }}" data-page_id="{{ admin.id(object) }}">
    <i class="nav-icon la la-copy"></i>
    {% if isSubNav is defined  %}
      <span class="nav-text">{{ 'action._copy'|trans({}, 'PageAdmin') }}</span>
    {% endif %}
  </a>
{% endif %}