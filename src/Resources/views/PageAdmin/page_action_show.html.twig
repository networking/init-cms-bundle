{% if admin.hasRoute('show') %}
    {% set path = path('cmf_routing_object', {'_route_object': object.route()}) %}
    <a href="{{ path('networking_init_view_draft', {'locale': object.locale, 'path': path | base64_encode})}}"
       data-original-title="{{ 'action_show'|trans({}, 'SonataAdminBundle') }}"
       target="_blank"  class="{% if isSubNav is defined %}menu-link px-3{% else %} btn btn-light btn-sm button-in-row {% endif %} "
       {% if isSubNav is not defined %}data-bs-toggle="tooltip" data-bs-placement="bottom"{% endif %}
       title="{{ 'action_show'|trans({}, 'SonataAdminBundle') }}">
        <i class="ki-outline ki-magnifier fs-3"></i>
        {% if isSubNav is defined  %}
            &nbsp; {{ 'action_show'|trans({}, 'SonataAdminBundle') }}
        {% endif %}
    </a>
{% endif %}