{% extends '@NetworkingInitCms/CRUD/base_list_field.html.twig' %}

{% block field %}
    <span class="badge py-3 px-4 fs-7 badge-light-{% if object.status == 'status_draft' %}warning
    {% elseif object.status == 'status_review' %}info
    {% elseif object.status == 'status_offline' %}danger
    {% else %}success{% endif %} show-tooltip"
          data-original-title="{{ value|trans({}, admin.translationDomain) }}">
            {{ value|trans({}, admin.translationDomain) }}</span>
{% endblock %}