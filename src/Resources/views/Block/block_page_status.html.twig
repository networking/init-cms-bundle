{% extends sonata_block.templates.block_base %}

{% block block %}


    <div class="card card-custom gutter-b">
        <div class="card-header">
            <div class="card-title">
                <span class="card-icon">
				    <i class="la la-file-alt icon-lg text-primary"></i>
				</span>
                <h3 class="card-label">{{ 'title.page_status_count'|trans({}, 'PageAdmin') }}
                </h3>
            </div>
        </div>
        <div class="card-body">
            <div class="row mb-2">
                <div class="col">
                    <span class="color-draft">{{ 'status_draft'|trans({}, 'PageAdmin') }} </span><span
                            class="badge badge-draft float-right">{{ draft_pages }}</span>

                </div>
            </div>
            <div class="row mb-2">
                <div class="col">
                    <span class="color-review">{{ 'status_review'|trans({}, 'PageAdmin') }} </span><span
                            class="badge badge-review float-right">{{ review_pages }}</span>

                </div>
            </div>
            <div class="row mb-2">
                <div class="col">
                    <span class="color-published">{{ 'status_published'|trans({}, 'PageAdmin') }} </span><span
                            class="badge badge-published float-right">{{ published_pages }}</span>

                </div>
            </div>
            <div class="clearfix">&nbsp;</div>
            {% if reviewPages|length > 0 %}
                <div class="row">
                    <div class="col-md-12">
                        <h4>{{ 'title.actual_reviews'|trans({}, 'PageAdmin') }}</h4>
                        {% for lang, drafts in reviewPages %}
                            <h5>{{ lang }}</h5>
                            {% for page in drafts %}
                                <a href="{% if is_granted('ROLE_SUPER_ADMIN') or is_granted('ROLE_NETWORKING_INIT_CMS_ADMIN_PAGE_EDIT') %}{{ path('admin_networking_initcms_page_edit', {id: page.id}) }}{% endif %}"
                                   class="link-nounderline">{{ page.pageName }}</a> <span
                                    class="info-soft font-small">{{ 'info.last_edited'|trans({}, 'PageAdmin') }}{{ page.updatedAt|date('H:i d M Y') }}</span>
                                <br/>

                            {% endfor %}
                        {% endfor %}

                    </div>
                </div>
            {% endif %}
            {% if draftPages|length > 0 %}
                <div class="row">
                    <div class="col-md-12">
                        <h4>{{ 'title.actual_drafts'|trans({}, 'PageAdmin') }}</h4>
                        {% for lang, drafts in draftPages %}
                            <h5>{{ lang }}</h5>
                            {% for page in drafts %}
                                <a href="{% if is_granted('ROLE_SUPER_ADMIN') or is_granted('ROLE_NETWORKING_INIT_CMS_ADMIN_PAGE_EDIT') %}{{ path('admin_networking_initcms_page_edit', {id: page.id}) }}{% endif %}"
                                   class="link-nounderline">{{ page.pageName }}</a> <span
                                    class="info-soft font-small">{{ 'info.last_edited'|trans({}, 'PageAdmin') }}{{ page.updatedAt|date('H:i d M Y') }}</span>
                                <br/>
                            {% endfor %}
                        {% endfor %}

                    </div>
                </div>
            {% endif %}
            <div class="clearfix">&nbsp;</div>
            <div class="pull-right">
                {% if is_granted('ROLE_SUPER_ADMIN') or is_granted('ROLE_NETWORKING_INIT_CMS_ADMIN_PAGE_LIST') %}
                    <a href="{{ path('admin_networking_initcms_page_list') }}"
                       class="btn btn-sm btn-primary">{{ 'link.see_all'|trans({}, 'PageAdmin') }}  &rarr;</a>
                {% endif %}
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
{% endblock %}