{% extends base_template %}

{% block title %}
    <small>{{ 'title.dashboard'|trans({'%admin_title%': sonata_config.title}, 'NetworkingInitCmsBundle') }}</small>{% endblock %}
{% block breadcrumb %}{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-md-12">
            {% for block in blocks.top %}
                    {{ sonata_block_render({ 'type': block.type, 'settings': block.settings}) }}
            {% endfor %}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            {% for block in blocks.left %}
                    {{ sonata_block_render({ 'type': block.type, 'settings': block.settings}) }}
            {% endfor %}
        </div>
        <div class="col-sm-6">
            {% for block in blocks.right %}
                    {{ sonata_block_render({ 'type': block.type, 'settings': block.settings}) }}
            {% endfor %}
        </div>
    </div>
{% endblock %}
