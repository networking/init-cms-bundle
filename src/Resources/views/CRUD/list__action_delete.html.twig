{% if admin.isGranted('DELETE', object) and admin.hasRoute('delete') and (object.isDeletable() is not defined or  object.isDeletable == 1 ) %}
    <a href="{{ admin.generateObjectUrl('delete', object) }}" class="btn btn-default btn-sm button-in-row show-tooltip dialog-link"
       id="{{ admin.getClassnameLabel() }}_{{ object.id }}" data-original-title="{{ 'action_delete'|trans({}, 'SonataAdminBundle') }}"
       title="{{ 'action_delete'|trans({}, 'SonataAdminBundle') }}"><i class="fa fa-trash"></i>
   </a>
{% endif %}
