{% extends '@NetworkingInitCms/CRUD/base_show_field.html.twig' %}

{% block field %}
{% apply spaceless %}
    {% if value %}
        <i class="far fa-circle-check"></i>
        {%- trans from 'SonataAdminBundle' %}label_type_yes{% endtrans -%}
    {% else %}
        <i class="fa fa-ban"></i>
        {%- trans from 'SonataAdminBundle' %}label_type_no{% endtrans -%}
    {% endif %}
{% endapply %}
{% endblock %}