{% extends admin.getTemplate('base_list_field') %}

{% block field %}
    {% if app.user and object.username != app.user.username and sonata_user.impersonating and admin.isGranted('EDIT', object) %}
        <a href="{{ url(sonata_user.impersonating.route, sonata_user.impersonating.parameters | merge({'_switch_user': object.username})) }}"
           title="{{ 'switch_user'|trans({}, 'SonataUserBundle') }}"
            class="nav-link">
            <i class="la la-user icon-lg"></i>
        </a>
    {% endif %}
{% endblock %}
