    class="btn btn-default btn-sm button-in-row show-tooltip"
        data-original-title="{{ 'action_edit'|trans({}, 'SonataAdminBundle') }}" data-page_id="{{ admin.id(object) }}">
  <i class="fa-regular fa-pen-to-square"></i>
</a>
{% endif %}