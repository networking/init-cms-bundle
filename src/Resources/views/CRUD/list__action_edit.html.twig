{% if admin.isGranted('EDIT', object) and admin.hasRoute('edit') %}

<a href="{{ admin.generateObjectUrl('edit', object) }}"
   class="{% if isSubNav is defined  %}nav-link{% else %}btn btn-sm btn-clean btn-icon{% endif %} show-tooltip"
   data-original-title="{{ 'action_edit'|trans({}, 'SonataAdminBundle') }}" data-page_id="{{ admin.id(object) }}">
  <i class="nav-icon la la-edit"></i>
  {% if isSubNav is defined  %}
  <span class="nav-text">{{ 'action_edit'|trans({}, 'SonataAdminBundle') }}</span>
  {% endif %}
</a>
{% endif %}