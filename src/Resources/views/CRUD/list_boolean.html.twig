{% extends admin.getTemplate('base_list_field') %}

{% block field %}
    {% apply spaceless %}
        {% if field_description.options.editable is defined and field_description.options.editable and admin.isGranted('EDIT', object) %}
            {% if value %}
                <a href="{{ url('sonata_admin_set_object_field_value', { 'context': 'list', 'field': field_description.name, 'objectId': admin.id(object), 'value': 0, 'code': admin.code(object) }) }}"
                   class="has-action init-cms-ajax-link">
                    <i class="las la-check-circle icon-lg align-middle mr-1"></i> {%- trans from 'SonataAdminBundle' %}label_type_yes{% endtrans -%}
                </a>
            {% else %}
                <a href="{{ url('sonata_admin_set_object_field_value', { 'context': 'list', 'field': field_description.name, 'objectId': admin.id(object), 'value': 1, 'code': admin.code(object) }) }}"
                   class="has-action init-cms-ajax-link">
                    <i class="las la-ban icon-lg align-middle  mr-1"></i> {%- trans from 'SonataAdminBundle' %}label_type_no{% endtrans -%}
                </a>
            {% endif %}
        {% else %}
            {% if value %}
                <i class="las la-check-circle icon-lg"></i>
                {%- trans from 'SonataAdminBundle' %}label_type_yes{% endtrans -%}
            {% else %}
                <i class="las la-ban icon-lg"></i>
                {%- trans from 'SonataAdminBundle' %}label_type_no{% endtrans -%}
            {% endif %}
        {% endif %}
    {% endapply %}
{% endblock %}