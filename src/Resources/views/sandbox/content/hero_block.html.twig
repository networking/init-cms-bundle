{% if text is defined %}
<div class="{% if gallery is defined %}span5{% else %}span12{% endif %}">
	{{ text | raw }}
</div>
{% endif %}
{% if gallery is defined %}
<div class="col-md-7">
	<div id="heroCarousel" class="carousel slide">
		<!-- Carousel items -->
		<div class="carousel-inner">
			{% for mediaItem in gallery.galleryItems %}
			<div class="item">
				<img src="{{ sonata_path(mediaItem.media, 'big')  }}" alt="" />
				<div class="carousel-caption">
					<p>{{ mediaItem.media.getDescription }}</p>
				</div>
			</div>
			{% endfor %}
		</div>
		<!-- Carousel nav -->
		<a class="carousel-control left" href="#heroCarousel" data-slide="prev">&lsaquo;</a>
		<a class="carousel-control right" href="#heroCarousel" data-slide="next">&rsaquo;</a>
	</div>
</div>
{% endif %}
